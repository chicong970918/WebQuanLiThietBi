@model DataLayer.tb_YEUCAUTHIETBI


@{
    ViewBag.Title = "Thêm yêu cầu";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4 class="text-danger">@ViewBag.Message</h4>
        <hr />
