            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Yêu cầu dùng thiết bị" class="btn btn-success" />
                @Html.ActionLink("Trở lại", "Index", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
}

