                @Html.DropDownList("IDTHIETBI", null, "Chọn", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDTHIETBI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IDNHANVIEN, "Chọn nhân viên", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IDNHANVIEN", null, "Chọn", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDNHANVIEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SOLUONG, "Số lượng", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
