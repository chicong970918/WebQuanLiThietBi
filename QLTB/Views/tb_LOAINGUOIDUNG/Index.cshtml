@model IEnumerable<DataLayer.tb_LOAINGUOIDUNG>

@{
    ViewBag.Title = "Tất cả người dùng";
}


@Html.ActionLink("Thêm loại người dùng mới", "Create", null, new { @class = "btn btn-success" })
<hr />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Loại người dùng</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Loại người dùng
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.LOAINGUOIDUNG)
                            </td>
                            <td class="btn-group">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.IDLOAINGUOIDUNG }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.IDLOAINGUOIDUNG }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>

