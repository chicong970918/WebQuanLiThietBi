@model IEnumerable<DataLayer.TB_NHANTHIETBI>

@{
    ViewBag.Title = "Nhận thiết bị";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lịch sử</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>


                        <th>
                            Thiết bị
                        </th>
                        <th>
                            Nhân viên
                        </th>
                        <th>
                            Ngày trả
                        </th>

                        <th>
                            Số ngày dùng
                        </th>

                        <th>
                            Số tiền
                        </th>
                        <th>
                            Số tiền phạt
                        </th>
                     
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.tb_THIETBI.TENTHIETBI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tb_NHANVIEN.HOVATEN)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.NGAYTRA)
                            </td>


                            <td>
                                @Html.DisplayFor(modelItem => item.TONGNGAYDUNG)
                            </td>
                            <td>
                                20
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FineAmount)
                            </td>

                            

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>