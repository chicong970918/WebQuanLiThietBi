@model IEnumerable<DataLayer.tb_NHANVIEN>

@{
    ViewBag.Title = "Danh sách nhân viên";
}


@Html.ActionLink("Thêm nhân viên", "Create", null, new { @class = "btn btn-success" })
<hr />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Nhân viên</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Họ và tên
                        </th>
                        <th>
                            Giới tính
                        </th>
                        <th>
                            Số điện thoại
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Địa chỉ
                        </th>
                        <th>
                            Chức vụ
                        </th>
                        <th>
                            Phòng ban
                        </th>
                        <th>
                            Tình trạng làm việc
                        </th>
                        <th>
                            Ghi chú
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.HOVATEN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GIOITINH)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMAIL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DIACHI)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tb_CHUCVU.TENCHUCVU)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tb_PHONGBAN.TENPHONGBAN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TINHTRANGHOATDONG)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GHICHU)
                            </td>

                            <td class="btn-group">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.IDNHANVIEN }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.IDNHANVIEN }, new { @class = "btn btn-danger" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
