@model IEnumerable<DataLayer.tb_PHONGBAN>

@Html.ActionLink("Thêm phòng ban", "Create", null, new { @class = "btn btn-success" })
<hr />
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thêm phòng ban</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Phòng ban
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TENPHONGBAN)
                            </td>

                            <td class="btn-group">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.IDPHONGBAN }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.IDPHONGBAN }, new { @class = "btn btn-danger" })

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


