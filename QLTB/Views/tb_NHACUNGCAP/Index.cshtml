@model IEnumerable<DataLayer.tb_NHACUNGCAP>

@{
    ViewBag.Title = "Danh sách cung cấp";
}

<p>
    @Html.ActionLink("Thêm nhà cung cấp", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách cung cấp</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>

                    <tr>
                        <th>
                            Tên nhà cung cấp
                        </th>
                        <th>
                            SĐT
                        </th>
                        <th>
                            Email
                        </th>
                        <th>
                            Ghi chú
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.TENNHACUNGCAP)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.EMAIL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GHICHU)
                            </td>

                            <td class="btn-group">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.IDNHACUNGCAP }, new { @class = "btn btn-primary" }) |
                                @Html.ActionLink("Xóa", "Delete", new { id = item.IDNHACUNGCAP }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

